<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:id="@+id/tab_buttons_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/tray"
        >

        <TextView
            android:id="@+id/bar_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/bar"
            style="@style/slidingTabButtonStyle"
            />

        <TextView
            android:id="@+id/bistro_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/bistro"
            style="@style/slidingTabButtonStyle"
            />

        <TextView
            android:id="@+id/cafe_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/cafe"
            style="@style/slidingTabButtonStyle"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/slider"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        style="@style/slidingTabOverlayStyle"
        />

</merge>